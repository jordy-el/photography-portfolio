<%= form_for @sample do |f| %>
    <%= f.label :caption %>
    <%= f.text_field :caption %>
    <%= f.label :category %>
    <%= f.text_field :category %>
    <%= f.label :alt %>
    <%= f.text_field :alt %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.submit 'Save' %>
<% end %>