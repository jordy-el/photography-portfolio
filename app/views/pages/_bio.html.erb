<div class="uk-section-muted uk-child-width-1-1 uk-grid-collapse page-section" uk-grid>
    <%= render 'parallax', image: @krissi.parallaxes.second.image %>
    <div id="third-section">
        <div class="uk-card uk-card-default uk-card-small" uk-sticky="offset: 80; bottom: true">
            <div class="uk-text-center uk-card-body uk-text-lead handwriting">
                All about Krissi
            </div>
        </div>
        <article class="uk-comment uk-comment-primary">
            <header class="uk-comment-header uk-grid-medium uk-flex-middle" uk-grid>
                <div class="uk-width-1-1">
                    <h4 class="uk-text-lead uk-margin-remove custom-font-1 uk-text-center">Krissi Flynn</h4>
                </div>
                <div class="uk-width-1-2@m uk-width-1-1@s info-text uk-align-center">
                    <%= simple_format(@krissi.bio_body.html_safe, class: 'uk-text-center custom-font-2') %>
                </div>
                <div class="uk-width-1-2@m uk-width-1-1@s">
                    <%= image_tag @krissi.bio_image.url(:medium), class: 'uk-align-center uk-border-rounded uk-height-max-large' %>
                </div>
            </header>
        </article>
    </div>
</div>