<%= form_for @krissi, url: admin_path(@krissi), method: :patch do |f| %>
    <%= f.label :linkedin %>
    <%= f.text_field :linkedin %>
    <%= f.label :instagram %>
    <%= f.text_field :instagram %>
    <%= f.label :facebook %>
    <%= f.text_field :facebook %>
    <%= f.label :contact_body %>
    <%= f.text_area :contact_body %>
    <%= f.label :bio_body %>
    <%= f.text_area :bio_body %>
    <%= f.label :bio_image %>
    <%= f.file_field :bio_image %>
    <%= f.submit 'Save' %>
<% end %>

<% @krissi.samples.each do |s| %>
    <%= link_to edit_sample_path(s) do %>
        <%= image_tag s.image.url(:thumb), height: '200', width: '200' %>
    <% end %>
<% end %>